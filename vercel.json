{
  "version": 2,
  "builds": [
    {
      "src": "api/[[...path]].ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api/server-dist/**"]
      }
    },
    { "src": "dist/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}

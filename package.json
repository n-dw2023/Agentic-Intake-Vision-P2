{
  "name": "agent-config",
  "private": true,
  "scripts": {
    "create-user": "tsx server/scripts/create-user.ts",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm run dev -w client",
    "dev:server": "npm run dev -w server",
    "build": "npm run build -w shared && npm run build -w server && npm run build:vercel-api && npm run build -w client && npm run build:vercel",
    "test": "npm run test -w shared && npm run test -w server && npm run test -w client",
    "lint": "npm run lint -w shared && npm run lint -w client && npm run lint -w server",
    "db:migrate": "npx supabase db push",
    "build:vercel": "node -e \"const fs=require('fs');const p='dist';fs.existsSync(p)&&fs.rmSync(p,{recursive:true});fs.cpSync('client/dist',p,{recursive:true});\"",
    "build:vercel-api": "node -e \"const fs=require('fs');const d='api/server-dist';fs.existsSync(d)&&fs.rmSync(d,{recursive:true});fs.cpSync('server/dist',d,{recursive:true});\"",
    "smoke:vercel": "node -e \"const fs=require('fs');const a='dist/index.html',b='api/server-dist/index.js';const ok=fs.existsSync(a)&&fs.existsSync(b);if(!ok){console.error('smoke:vercel failed');if(!fs.existsSync(a))console.error('  missing: '+a);if(!fs.existsSync(b))console.error('  missing: '+b);process.exit(1);}\""
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "workspaces": [
    "shared",
    "client",
    "server"
  ]
}